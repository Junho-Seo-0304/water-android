<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="#777"/>
                    <gradient
                        android:startColor="#547cff"
                        android:centerColor="#547cff"
                        android:endColor="#547cff"
                        android:angle="270"/>
                    <size
                        android:width="17dp"
                        android:height="17dp"/>
                </shape>
            </item>
            <item
                android:width="4.5dp"
                android:height="1.1dp"
                android:top="11.3dp"
                android:left="3.4dp">
                <rotate
                    android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="#fff" />
                    </shape>
                </rotate>
            </item>
            <item
                android:width="10.7dp"
                android:height="1.1dp"
                android:top="9dp"
                android:left="5dp">
                <rotate
                    android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="#fff"/>
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>
</selector>