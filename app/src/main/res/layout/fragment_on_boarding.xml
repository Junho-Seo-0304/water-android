<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="appvian.water.buddy.viewmodel.IntroViewModel"/>
    </data>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/onboarding_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/intro_onboarding1"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginStart="35dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:fontFamily="@font/spoqa_han_sans_light"
                />
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="52dp"
                android:layout_marginBottom="34dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="60dp"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toBottomOf="@+id/onboarding_text"
                app:layout_constraintLeft_toLeftOf="@id/onboarding_text"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/onboarding_1" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>