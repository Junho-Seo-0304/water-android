<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="introViewModel"
            type="appvian.water.buddy.viewmodel.IntroViewModel" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.Intro.IntroFourthFragment">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/intro_fourth_main1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:text="@string/intro_fourth_welcome1"
                android:textSize="22sp"
                android:textColor="#000000"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />
            <TextView
                android:id="@+id/intro_fourth_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btnNormalBackgroundColor"
                android:text=""
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginStart="35dp"
                app:layout_constraintTop_toBottomOf="@+id/intro_fourth_main1"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <TextView
                android:id="@+id/intro_fourth_main2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/intro_fourth_welcome2"
                android:textSize="22sp"
                android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@+id/intro_fourth_main1"
                app:layout_constraintLeft_toRightOf="@+id/intro_fourth_name" />
            <TextView
                android:id="@+id/intro_fourth_main3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:text="@string/intro_fourth_welcome3"
                android:textSize="22sp"
                android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@+id/intro_fourth_main2"
                app:layout_constraintLeft_toLeftOf="parent" />
            <TextView
                android:id="@+id/intro_fourth_Targetamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btnNormalBackgroundColor"
                android:text=""
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginStart="35dp"
                app:layout_constraintTop_toBottomOf="@+id/intro_fourth_main3"
                app:layout_constraintLeft_toLeftOf="parent"

                />
            <TextView
                android:id="@+id/intro_fourth_main4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/intro_fourth_welcome4"
                android:textSize="22sp"
                android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@+id/intro_fourth_main3"
                app:layout_constraintLeft_toRightOf="@+id/intro_fourth_Targetamount" />
            <TextView
                android:id="@+id/intro_fourth_main5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:text="@string/intro_fourth_welcome5"
                android:textSize="22sp"
                android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@+id/intro_fourth_main4"
                app:layout_constraintLeft_toLeftOf="parent" />

            <ImageView
                android:layout_width="220dp"
                android:layout_height="157dp"
                android:src="@drawable/wabi"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="45dp"
                app:layout_constraintBottom_toTopOf="@+id/startbtn"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <Button
                android:id="@+id/startbtn"
                android:layout_width="360dp"
                android:layout_height="52dp"
                android:background="@drawable/radius"
                android:text="@string/intro_fourth_btn"
                android:textColor="@color/White"
                android:layout_marginBottom="24dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>