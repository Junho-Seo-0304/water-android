<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

        <data>
                <variable
                    name="mainViewModel"
                    type="appvian.water.buddy.viewmodel.MainViewModel" />
        </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.MainActivity">


                <FrameLayout
                    android:id="@+id/fragment"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <ImageView
                    android:id="@+id/bottom_white"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="#ffffff"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/navigation_bar_background"
                            android:background="@android:color/transparent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />

                        <com.google.android.material.bottomnavigation.BottomNavigationView
                            android:id="@+id/main_navigation"
                            android:layout_width="0dp"
                            android:layout_height="75dp"
                            app:layout_constraintWidth_percent="0.6585369"
                            android:layout_gravity="bottom"
                            android:background="@android:color/transparent"
                            app:elevation="0dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:menu="@menu/main_menu"
                            app:labelVisibilityMode="labeled"
                            app:itemIconTint="@drawable/menu_selector_color"
                            app:itemTextColor="@drawable/menu_selector_color"
                            bind:navigationItemSelected="@{mainViewModel.menuListener}"
                            android:fontFamily="@font/spoqa_han_sans_regular"/>

                        <ImageButton
                            android:id="@+id/floating_button"
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:src="@drawable/fab_plus"
                            android:scaleType="fitXY"
                            android:background="@android:color/transparent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/main_navigation"
                            android:layout_marginBottom="28dp"
                            />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/grey_back"
                    android:visibility="gone"
                    >
                        <View
                            android:id="@+id/line"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            app:layout_constraintWidth_percent="0.6585369"
                            android:background="@color/transparent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <ImageButton
                            android:id="@+id/fab_add"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/fab_add"
                            android:scaleType="fitXY"
                            android:background="@color/transparent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/line"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginBottom="130dp"
                            />
                        <TextView
                            android:id="@+id/txt_fab_add_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="직접 추가하기"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            app:layout_constraintTop_toTopOf="@id/fab_add"
                            app:layout_constraintBottom_toBottomOf="@id/fab_add"
                            app:layout_constraintEnd_toStartOf="@id/fab_add"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/spoqa_han_sans_regular"
                            />
                        <ImageButton
                            android:id="@+id/fab_fav_1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:scaleType="fitXY"
                            android:background="@color/transparent"
                            android:visibility="gone"
                            app:layout_constraintBottom_toTopOf="@id/fab_add"
                            android:layout_marginBottom="10dp"
                            app:layout_constraintStart_toStartOf="@id/fab_add"
                            app:layout_constraintEnd_toEndOf="@id/fab_add"
                            />
                        <TextView
                            android:id="@+id/txt_fav_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="@id/fab_fav_1"
                            app:layout_constraintBottom_toBottomOf="@id/fab_fav_1"
                            app:layout_constraintEnd_toStartOf="@id/fab_fav_1"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/spoqa_han_sans_bold"
                            />
                        <ImageButton
                            android:id="@+id/fab_fav_2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:scaleType="fitXY"
                            android:background="@color/transparent"
                            android:visibility="gone"
                            app:layout_constraintBottom_toTopOf="@id/fab_fav_1"
                            android:layout_marginBottom="10dp"
                            app:layout_constraintStart_toStartOf="@id/fab_add"
                            app:layout_constraintEnd_toEndOf="@id/fab_add"
                            />
                        <TextView
                            android:id="@+id/txt_fav_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="@id/fab_fav_2"
                            app:layout_constraintBottom_toBottomOf="@id/fab_fav_2"
                            app:layout_constraintEnd_toStartOf="@id/fab_fav_2"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/spoqa_han_sans_bold"
                            />


                </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>