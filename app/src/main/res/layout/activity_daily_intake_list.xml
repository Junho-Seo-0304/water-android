<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable
            name="homeViewModel"
            type="appvian.water.buddy.viewmodel.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/daily_intake_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘 마신 음료"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="46dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:fontFamily="@font/spoqa_han_sans_bold"
            />
        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@id/textView"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="25dp"
            android:src="@drawable/trash_icon"
            />
        <ImageView
            android:id="@+id/daily_back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/arrow_left"
            app:layout_constraintTop_toTopOf="@id/textView"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="25dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/daily_intake_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="19dp"
            app:layout_constraintHeight_max="500dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView"
            />
        <TextView
            android:id="@+id/modify_explain_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="음료 리스트를 선택하면 수정할 수 있어요."
            android:textSize="13sp"
            android:textColor="#868e96"
            app:layout_constraintTop_toBottomOf="@id/daily_intake_RecyclerView"
            app:layout_constraintLeft_toLeftOf="@id/daily_intake_RecyclerView"
            android:fontFamily="@font/spoqa_han_sans_regular"
            />
        <Button
            android:id="@+id/set_delete_button"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/delete_button_not_active"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:visibility="gone"
            bind:deleteButtonClicked="@{homeViewModel.deleteListner}"
            android:fontFamily="@font/spoqa_han_sans_bold"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/no_water_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:id="@+id/no_water_icon"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@mipmap/no_water_grey_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <TextView
                android:id="@+id/no_water_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘 마신 음료가 없습니다."
                android:textSize="15sp"
                android:textColor="#adb5bd"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/no_water_icon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:fontFamily="@font/spoqa_han_sans_bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="첫 잔을 추가해보세요!"
                android:textColor="#adb5bd"
                android:textSize="13sp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/no_water_text1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:fontFamily="@font/spoqa_han_sans_regular"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>