<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/txt_top"
        android:text="목표량 직접 수정하기"
        android:textSize="15sp"
        android:textColor="@color/settingTxtBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/spoqa_han_sans_bold"
        />
    <ImageView
        android:id="@+id/img_cancel"
        android:text="취소"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/icon_x"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/edt_target_amount"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/grey_6"
        android:layout_marginTop="46dp"
        android:inputType="number"
        android:theme="@style/EdtSettingTheme"
        android:gravity="center"
        android:maxLength="7"
        app:layout_constraintTop_toBottomOf="@id/txt_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/spoqa_han_sans_bold"
        />
    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="저장"
        android:background="@color/btnBlueInactive"
        android:enabled="false"
        android:textSize="15sp"
        android:textColor="@color/grey_1"
        android:layout_marginTop="62dp"
        app:layout_constraintTop_toBottomOf="@id/edt_target_amount"
        android:fontFamily="@font/spoqa_han_sans_bold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>