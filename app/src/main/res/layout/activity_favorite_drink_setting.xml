<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="appvian.water.buddy.viewmodel.SettingViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.settings.FavoriteDrinkSettingActivity">
        <TextView
            android:id="@+id/txt_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자주 마시는 음료"
            android:textColor="@color/settingTxtBlack"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="46dp"
            />
        <ImageView
            android:id="@+id/img_plus"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/plus"
            app:layout_constraintTop_toTopOf="@id/txt_top"
            app:layout_constraintBottom_toBottomOf="@id/txt_top"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/txt_top"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            />
        <TextView
            android:id="@+id/txt_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자주 마시는 음료는 최대 2개 까지 등록할 수 있어요."
            android:textColor="@color/grey_8"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/recyclerview"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="@id/recyclerview"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
