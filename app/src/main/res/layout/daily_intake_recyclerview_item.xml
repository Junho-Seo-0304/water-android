<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_launcher_foreground"
        />
    <TextView
        android:id="@+id/categoryText"
        android:text="테스트"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/icon"
        app:layout_constraintLeft_toRightOf="@id/icon"
        app:layout_constraintBottom_toTopOf="@id/amountText"
        android:fontFamily="@font/spoqa_han_sans_bold"
        />
    <TextView
        android:id="@+id/amountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#868e96"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/categoryText"
        app:layout_constraintBottom_toBottomOf="@id/icon"
        app:layout_constraintLeft_toRightOf="@id/icon"
        android:fontFamily="@font/spoqa_han_sans_regular"
        />
    <CheckBox
        android:id="@+id/delete_checkbox"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:button="@drawable/checkbox_oval"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/amountText"
        />
    <TextView
        android:id="@+id/am_pm_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="#868e96"
        android:layout_marginRight="12dp"
        app:layout_constraintTop_toTopOf="@id/categoryText"
        app:layout_constraintRight_toLeftOf="@id/delete_checkbox"
        app:layout_constraintBottom_toTopOf="@id/time_text"
        android:fontFamily="@font/spoqa_han_sans_regular"
        />
    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="#868e96"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toLeftOf="@id/delete_checkbox"
        app:layout_constraintBottom_toBottomOf="@id/amountText"
        app:layout_constraintTop_toBottomOf="@id/am_pm_text"
        android:fontFamily="@font/spoqa_han_sans_regular"
        />

</androidx.constraintlayout.widget.ConstraintLayout>